{
  "name": "@app/e2e-tests",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "https://www.bentley.com"
  },
  "scripts": {
    "start": "npm test",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "test:local": "npx playwright test --grep=#local",
    "test:web": "cross-env WEB_TEST=1 npx playwright test --grep=#web",
    "test:local:debug": "npx playwright test --grep=#local --ui",
    "test:web:debug": "cross-env WEB_TEST=1 npx playwright test --grep=#web --ui",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "prepare": "playwright install chromium"
  },
  "dependencies": {
    "@itwin/eslint-plugin": "catalog:build-tools",
    "@playwright/test": "^1.55.1",
    "@types/node": "catalog:build-tools",
    "cross-env": "catalog:build-tools",
    "eslint": "catalog:build-tools",
    "playwright": "^1.55.1",
    "typescript": "catalog:build-tools"
  }
}
