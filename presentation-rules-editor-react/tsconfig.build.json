{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM"],
    "jsx": "react-jsx",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "lib/esm",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false
  },
  "include": ["index.ts", "src/**/*"]
}
